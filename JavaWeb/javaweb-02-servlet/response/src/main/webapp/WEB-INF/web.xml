<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

    <!--注册servlet-->
    <servlet>
        <servlet-name>fileDown</servlet-name>
        <servlet-class>com.zz.servlet.FileServlet</servlet-class>
    </servlet>
    <!--请求路径-->
    <servlet-mapping>
        <servlet-name>fileDown</servlet-name>
        <url-pattern>/down</url-pattern>
    </servlet-mapping>
    <!--注册servlet-->
    <servlet>
        <servlet-name>image</servlet-name>
        <servlet-class>com.zz.servlet.ImageServlet</servlet-class>
    </servlet>
    <!--请求路径-->
    <servlet-mapping>
        <servlet-name>image</servlet-name>
        <url-pattern>/image</url-pattern>
    </servlet-mapping>


    <!--注册servlet-->
    <servlet>
        <servlet-name>red</servlet-name>
        <servlet-class>com.zz.servlet.RedirectServlet</servlet-class>
    </servlet>
    <!--请求路径-->
    <servlet-mapping>
        <servlet-name>red</servlet-name>
        <url-pattern>/red</url-pattern>
    </servlet-mapping>

    <!--注册servlet-->
    <servlet>
        <servlet-name>req</servlet-name>
        <servlet-class>com.zz.servlet.RequestTest</servlet-class>
    </servlet>
    <!--请求路径-->
    <servlet-mapping>
        <servlet-name>req</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

</web-app>